<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appMainColor</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- white status bar -->
        <item name="android:statusBarColor">@color/appMainColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- background -->
        <item name="android:windowBackground">@color/appMainColor</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appMainColor</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- white status bar -->
        <item name="android:statusBarColor">@color/appMainColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- background -->
        <item name="android:windowBackground">@drawable/splash_drawable</item>


    </style>
    <style name="defaultButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="urgentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
</resources>